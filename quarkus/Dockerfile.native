# build app
FROM quay.io/quarkus/ubi-quarkus-mandrel-builder-image:jdk-21 AS build
USER root
RUN microdnf install findutils
USER quarkus
WORKDIR /code
COPY gradle ./gradle
COPY gradlew build.gradle gradle.properties settings.gradle lombok.config ./
COPY src/ ./src
RUN ./gradlew --no-daemon clean assemble --stacktrace -Dquarkus.package.type=native
RUN ls -la build/

## Stage 2 : create the docker final image
FROM quay.io/quarkus/quarkus-micro-image:2.0
WORKDIR /work/
COPY --from=build /code/build/*-runner /work/application
RUN chmod 775 /work
EXPOSE 8080
CMD ["./application", "-Dquarkus.http.host=0.0.0.0"]
