docker_build('rust', '.')
docker_build('rust-wiremock', 'kustomize/environment/local/wiremock/image')
docker_build('rust-otel-collector', 'kustomize/environment/local/otel-collector/image')

k8s_yaml(kustomize('kustomize/environment/local'))

k8s_resource(workload='rust', port_forwards=['8081:8081'])
k8s_resource(workload='rust-database', port_forwards=['5432:5432'])
k8s_resource(workload='rust-jaeger', port_forwards=['16686:16686'])
