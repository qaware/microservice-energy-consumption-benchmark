trigger_mode(TRIGGER_MODE_MANUAL)

docker_build('204306537988.dkr.ecr.eu-north-1.amazonaws.com/rust:latest', '.')

allow_k8s_contexts('FWE@green-eks-k8s.eu-north-1.eksctl.io')

k8s_yaml(kustomize('kustomize/environment/local'))

k8s_resource(
    workload='rust',
    port_forwards=[port_forward(local_port=8080, container_port=8080, name='http')])

k8s_resource(workload='rust-database', port_forwards=5432)
k8s_resource(workload='rust-hoverfly', port_forwards=[8500, 8888])
