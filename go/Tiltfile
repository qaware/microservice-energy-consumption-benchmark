trigger_mode(TRIGGER_MODE_MANUAL)

docker_build('go', '.')
docker_build('go-wiremock', 'kustomize/environment/local/wiremock/image')

k8s_yaml(kustomize('kustomize/environment/local'))

k8s_resource(
    workload='go',
    port_forwards=[port_forward(local_port=8080, container_port=8080, name='http')])

k8s_resource(workload='go-database', port_forwards=5432)
k8s_resource(workload='go-wiremock', port_forwards=8888)
